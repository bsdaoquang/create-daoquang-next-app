{
	"name": "create-daoquang-next-app",
	"version": "0.1.6",
	"description": "Scaffold Next.js App Router template (i18n, Bootstrap CSS, Ant Design, ESLint, etc.) in seconds",
	"type": "module",
	"bin": {
		"create-daoquang-next-app": "bin/cli.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bsdaoquang/create-daoquang-next-app.git"
	},
	"author": "Đào Quang <bsdaoquang@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/bsdaoquang/create-daoquang-next-app#readme",
	"files": [
		"bin",
		"dist",
		"templates",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup src/index.ts src/scaffold.ts --format esm --dts --clean",
		"dev": "tsup src/index.ts src/scaffold.ts --format esm --watch",
		"prepublishOnly": "npm run build",
		"e2e": "node bin/cli.js ci-app --yes --packageName=ci-app --locales=vi,en && cd ci-app && npm i && npm run build",
		"publish": "npm publish --access public",
		"test": "npx ./create-daoquang-next-app-0.1.4.tgz"
	},
	"dependencies": {
		"execa": "^9.3.0",
		"fs-extra": "^11.2.0",
		"handlebars": "^4.7.8",
		"kolorist": "^1.8.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.7.4",
		"@types/prompts": "^2.4.9",
		"tsup": "^8.1.0",
		"typescript": "^5.6.2"
	},
	"engines": {
		"node": ">=18.17"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"scaffold",
		"create",
		"nextjs",
		"app-router",
		"template",
		"i18n",
		"tailwind"
	]
}
