{
	"name": "create-bee-next-app",
	"version": "0.1.0",
	"description": "Scaffold Next.js App Router template (i18n, Bootstrap CSS, Ant Design, ESLint, etc.) in seconds",
	"type": "module",
	"bin": {
		"create-bee-next-app": "bin/cli.js"
	},
	"files": [
		"bin",
		"dist",
		"templates",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "tsup src/index.ts src/scaffold.ts --format esm --dts --clean",
		"dev": "tsup src/index.ts src/scaffold.ts --format esm --watch",
		"prepublishOnly": "npm run build"
	},
	"dependencies": {
		"execa": "^9.3.0",
		"fs-extra": "^11.2.0",
		"handlebars": "^4.7.8",
		"kolorist": "^1.8.0",
		"prompts": "^2.4.2"
	},
	"devDependencies": {
		"@types/node": "^22.7.4",
		"tsup": "^8.1.0",
		"typescript": "^5.6.2"
	},
	"engines": {
		"node": ">=18.17"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"scaffold",
		"create",
		"nextjs",
		"app-router",
		"template",
		"i18n",
		"tailwind"
	]
}
